@@ -76,6 +77,17 @@ bool set_state_dir(char *dir)
 	return true;
 }
 
+bool set_content_url(const char *url)
+{
+	if (content_url) {
+		free(content_url);
+	}
+	string_or_die(&content_url, "%s", url);
