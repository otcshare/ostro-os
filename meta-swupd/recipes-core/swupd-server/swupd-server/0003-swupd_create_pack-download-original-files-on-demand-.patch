+
+
 bool init_globals(void)
 {
 	if (format == 0) {
@@ -123,4 +135,5 @@ void free_state_globals(void)
 	free(packstage_dir);
 	free(image_dir);
 	free(staging_dir);
+	free(content_url);
 }
